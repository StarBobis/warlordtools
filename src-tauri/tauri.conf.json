{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "warlordtools",
  "version": "0.1.0",
  "identifier": "warlordtools",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "warlordtools",
        "width": 1280,
        "height": 720,
        "minWidth": 1056,
        "minHeight": 594,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
